@import '../../style/abstract/abstract';

.right {
  .title-img {
    width: 100%;
    overflow: hidden;
    border-radius: $border-radius $border-radius 0 0;
  }
}
.title-image {
    object-fit: cover;
    width: 100%;
    height: 12.5rem;
}
.categories {
  display: flex;
  justify-content: space-between;
  background-color: $c-lightest;
  border-radius: 0 0 $border-radius $border-radius;
}

.categories-list {
  &__item {
    @extend %h4;
    font-weight: bold;
    @include easeOut;
    
    &:hover,
    &:focus {
      color: $c-neutral;
      border-bottom: 3px solid $c-active;
    }
    
    &_active {
      border-bottom: 3px solid $c-active;
    }
  }
}

.right-dropdown {
  
  &__toggle {
    @extend %h3;
    font-size: 1rem;
    @include easeOut;
  
    &:hover,
    &:focus {
      color: $c-neutral;
      border-bottom: 3px solid $c-active;
    }
  }
}

.right-dropdown-menu {
  position: relative;
  background-color: rgba($c-darkest, .9);
  padding: 0;
  border-radius: $border-radius;
  
  &__item {
    @extend %p;
    color: $c-lightest;
    text-align: center;
    font-size: 1rem;
    border-top: 1px solid $c-light;
    padding: .5rem;
    
    &:first-child {
      border-top: none;
    }
  }
  
  &:before {
    position: absolute;
    left: 50%; top: -1rem;
    transform: translateX(-50%);
    content: '';
    border-style: solid;
    border-width: 0 1rem 1rem 1rem;
    border-color: transparent transparent rgba($c-darkest, .9) transparent;
  }
}

.cover-pic-img-box {
  position: relative;
  text-align: center;
  display: block;
  overflow: hidden;
}
.cover-pic-img-content {
  padding: 20px;
  background: transparent;
  position: absolute;
  bottom: -200px;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.2s ease-in-out;
  -webkit-transition: all 0.2s ease-in-out;
  -moz-transition: all 0.2s ease-in-out;
}
.cover-pic-img-box:hover .cover-pic-img-content{
bottom: 0px;
background-color: rgba(91, 91, 103, 0.7);
transition: all 0.2s ease-in-out;
  -webkit-transition: all 0.2s ease-in-out;
  -moz-transition: all 0.2s ease-in-out;
  background-image: url('edit-icon.png');
  background-repeat: no-repeat;
  background-position:center;
}